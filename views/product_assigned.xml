<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Form View -->
        <record id="view_product_assigned_form" model="ir.ui.view">
            <field name="name">product_assigned_form</field>
            <field name="model">product.assigned</field>
            <field name="arch" type="xml">
                <form string="Product Assigned">
                    <sheet>
                        <group>
                            <field name="engineer"/>
                            <field name="line_manager"/>
                            <field name="department"/>
                        </group>

                        <notebook>
                            <page string="Products">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="serial_number_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_product_assigned_tree" model="ir.ui.view">
            <field name="name">product_assigned_tree</field>
            <field name="model">product.assigned</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="engineer"/>
                    <field name="line_manager"/>
                    <field name="department"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="product_assigned_action" model="ir.actions.act_window">
            <field name="name">Product Assigned</field>
            <field name="res_model">product.assigned</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="product_assigned_menu" name="Product Assigned Engineer"
                  parent="menu_after_sales"
                  sequence="10"
                  action="product_assigned_action"/>

    </data>
</odoo>
