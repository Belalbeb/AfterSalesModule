<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>



        <!-- Tree View -->
        <record id="maintenance_visit_view_tree" model="ir.ui.view">
            <field name="name">maintenance.visit.view.tree</field>
            <field name="model">maintenance.visit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer"/>
                    <field name="department"/>
                    <field name="contact_name"/>
                    
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="maintenance_visit_view_form" model="ir.ui.view">
            <field name="name">maintenance.visit.view.form</field>
            <field name="model">maintenance.visit</field>
            <field name="arch" type="xml">
                <form>
                 
                    <sheet>
                        <group>
                            <field name="customer"/>
                            <field name="department"/>
                            <field name="contact_name"/>
                            <field name="mobile"/>
                            <field name="customer_type"/>
                            <field name="visit"/>
                            <field name="attachment" widget="binary"/>
                            <field name="work_description"/>               
                            <field name="device_is_out_of_order"/>
                            <field name="device_under_testing"/>
                            <field name="device_needs_spare_parts"/>
                            <field name="device_is_working_properly"/>
                        </group>
                       
                   
                        <notebook>
                            <page string="Products">
                                <field name="visit_checklist_id">
                                    <tree editable="bottom">
                                        <field name="part_number"/>
                                        <field name="product_id"/>
                                        <field name="model_id"/>
                                        <field name="product_family_id"/>
                                        <field name="serial_number_ids"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="maintenance_visit_action" model="ir.actions.act_window">
            <field name="name">Maintenance Visit</field>
            <field name="res_model">maintenance.visit</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="maintenance_visit_cron" model="ir.cron">
            <field name="name">Manintenance visit Notification</field>
            <field name="model_id" ref="model_maintenance_visit"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.maintenance_visit_notification()</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Menu -->
        <menuitem
            id="maintenance_visit_menu"
            name="Maintenance Visit"
            sequence="10"
            parent="menu_after_sales"
            action="maintenance_visit_action"
        />

    </data>
</odoo>
